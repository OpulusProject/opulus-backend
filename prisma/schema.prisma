generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OnboardingStatus {
  IN_PROGRESS
  COMPLETED
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String?
  lastName  String?
  email     String   @unique
  password  String
  onboardingStatus OnboardingStatus @default(IN_PROGRESS)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  accounts  Account[]
}

model Account {
  accountId String  @id@unique
  balances  Balances[] //need to create model
  mask      String?
  name      String?
  officialName  String?
  type      String
  subtype   String?
  verificationStatus  String
}

model Balance {
  current   Decimal?
  isoCurrencyCode String?
  unofficialCurrencyCode  String?
  lastUpdate  DateTime?
}