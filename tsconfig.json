{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@middleware/*": ["./src/middleware/*"],
      "@prisma/*": ["./prisma/*"],
      "@routes/*": ["./src/routes/*"],
      "@schema/*": ["./src/schema/*"],
      "@service/*": ["./src/service/*"],
      "@utils/*": ["./src/utils/*"]
    }
  }
}
